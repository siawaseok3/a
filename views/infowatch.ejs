<script>
  function formatNumber(num) {
    if (num < 10000) return num;
    if (num < 100000000) return (num / 10000).toFixed(1).replace(/\.0$/, '') + '万';
    return (num / 100000000).toFixed(1).replace(/\.0$/, '') + '億';
  }

  document.addEventListener("DOMContentLoaded", function() {
    const viewsElement = document.getElementById("views");
    const likesElement = document.getElementById("likes");
    const views = parseInt(viewsElement.textContent.replace(/,/g, ""), 10);
    const likes = parseInt(likesElement.textContent.replace(/,/g, ""), 10);

    viewsElement.textContent = formatNumber(views) + '回視聴・高評価数' + formatNumber(likes);
  });
</script>



