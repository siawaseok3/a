   <h1 id="category-label">現在表示中のカテゴリ</h1>

<script>
    function getCategoryLabel(pathname) {
      switch (pathname) {
        case "/":
        case "":
          return "日本の急上昇";
        case "/music":
          return "音楽の急上昇";
        case "/gaming":
          return "ゲームの急上昇";
        default:
          return "不明";
      }
    }

    function updateCategoryLabel() {
      const label = document.getElementById("category-label");
      if (label) {
        label.textContent = ` ${getCategoryLabel(location.pathname)}`;
      }の急上昇
    }

    // 初回表示
    updateCategoryLabel();

    // SPA風リンク処理
    document.querySelectorAll("nav a").forEach(link => {
      link.addEventListener("click", async (e) => {
        e.preventDefault();
        const href = link.getAttribute("href");

        // pushStateしない場合も明示的に更新
        if (location.pathname !== href) {
          history.pushState({}, "", href);
        }

        // 必要ならここで fetch + 表示更新する処理を書く
        updateCategoryLabel();
      });
    });

    // 戻る・進む対応
    window.addEventListener("popstate", updateCategoryLabel);
  </script>

